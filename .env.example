# ============================================
# HullZero - Variáveis de Ambiente
# ============================================
# Copie este arquivo para .env e configure os valores
# cp .env.example .env

# ============================================
# Ambiente
# ============================================
ENVIRONMENT=development
# Opções: development, production, testing

# ============================================
# Banco de Dados
# ============================================
# SQLite (desenvolvimento)
DATABASE_URL=sqlite:///./hullzero.db

# PostgreSQL/TimescaleDB (produção)
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/hullzero

# Configurações do Pool de Conexão
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
USE_TIMESCALEDB=false

# ============================================
# Autenticação e Segurança
# ============================================
# IMPORTANTE: Gere uma chave secreta forte em produção!
# Você pode gerar com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-em-producao
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# API e Servidor
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================
# URLs permitidas para requisições (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ============================================
# Frontend
# ============================================
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000

# ============================================
# Redis (Cache - Opcional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
# Opções: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/hullzero.log

# ============================================
# Modelos de IA/ML
# ============================================
ML_MODEL_PATH=models/
ML_CACHE_ENABLED=true

# ============================================
# Email (Opcional - para notificações)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@hullzero.com.br

# ============================================
# Upload de Arquivos
# ============================================
UPLOAD_DIR=uploads/
MAX_UPLOAD_SIZE=10485760
# Tamanho máximo em bytes (10MB padrão)

# ============================================
# Segurança
# ============================================
# Taxa de limite de requisições
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
# 100 requisições por 60 segundos
